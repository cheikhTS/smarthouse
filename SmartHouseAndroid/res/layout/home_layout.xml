<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 	
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bt_home_selector"
	>
    
    <ImageView 
        android:id="@+id/imageViewHome" 
    	android:layout_height="64dp" 
    	android:layout_width="64dp" 
    	android:src="@drawable/ic_smarthouse" 
    	android:layout_alignParentTop="true"
    	android:contentDescription="@string/app_name"
    	android:layout_centerHorizontal="true">
    </ImageView>
    
	<TextView 
		android:layout_height="wrap_content"
		android:id="@+id/nomMaison" 
		android:layout_width="wrap_content"
		android:layout_below="@+id/imageViewHome" 
		android:layout_marginTop="2dp"
		android:layout_centerHorizontal="true"
		android:textSize="18sp"
		android:textIsSelectable="false"
		android:ellipsize="marquee"></TextView>

	<ImageView
	    android:id="@+id/iv_state"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_margin="5dp"
	    android:src="@drawable/state_off"/>
	
</RelativeLayout>